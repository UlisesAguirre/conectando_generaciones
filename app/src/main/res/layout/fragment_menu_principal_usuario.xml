<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_menu_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MenÃº Principal"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_buscar_perfiles"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#5BAE31"
            android:drawableStart="@mipmap/perfiles"
            android:text="Buscar Perfiles"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_mi_perfil"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#5BAE31"
            android:drawableStart="@mipmap/perfiles"
            android:text="Mi Perfil"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_notificaciones"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#5BAE31"
            android:drawableStart="@mipmap/perfiles"
            android:text="Notificaciones"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_mi_agenda"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#5BAE31"
            android:drawableStart="@mipmap/perfiles"
            android:text="Mi Agenda"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_informes"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#5BAE31"
            android:drawableStart="@mipmap/perfiles"
            android:text="Informes"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
