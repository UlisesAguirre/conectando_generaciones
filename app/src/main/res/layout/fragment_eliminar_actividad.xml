<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentEliminarActividad">

    <TextView
        android:id="@+id/tv_eliminar_actividad"
        android:layout_width="320dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="¿Está seguro de eliminar?"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_aceptar_eliminar"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:text="Aceptar"
        android:backgroundTint="#02AE01" />

    <Button
        android:id="@+id/btn_cancelar_eliminar"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:text="Cancelar"
        android:backgroundTint="#ADADAD" />

</FrameLayout>
